zcat ~/Documents/neanderthal/chag/chag_vcfs/chr9.noRB.vcf.gz | awk '$1 == 9 && $2 >= 28684889 && $2 <= 28684889' > ~/Documents/neanderthal/chag/chag_vcfs/specific_gene_vcfs/upstream_gmbe1.vcf



